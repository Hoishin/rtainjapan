{
	"private": true,
	"scripts": {
		"dev": "yarn --cwd rtainjapan-layouts dev",
		"format": "prettier '**/*.{ts,tsx,json,html,yml,css,scss,md}' --write",
		"postinstall": "ts-node -T scripts/postinstall.ts",
		"lint": "tslint -p . -t stylish",
		"start": "node node_modules/nodecg"
	},
	"husky": {
		"hooks": {
			"pre-commit": "depcruise rtainjapan-layouts/src && lint-staged"
		}
	},
	"dependencies": {
		"nodecg": "1.3.0"
	},
	"devDependencies": {
		"@hoishin/tslint-config": "2.0.3",
		"@types/rimraf": "2.0.2",
		"bower": "1.8.8",
		"dependency-cruiser": "4.27.1",
		"husky": "1.3.1",
		"lint-staged": "8.2.1",
		"prettier": "1.15.3",
		"rimraf": "2.6.2",
		"sort-package-json": "1.17.1",
		"ts-node": "7.0.1",
		"tslib": "1.9.3",
		"tslint": "5.12.0",
		"tslint-config-prettier": "1.17.0",
		"typescript": "3.5.3"
	},
	"engines": {
		"node": "^10.14.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"tslint -p . -t stylish --fix",
			"git add"
		],
		"*.{ts,tsx,json,html,yml,css,scss,md}": [
			"prettier --write",
			"git add"
		],
		"**/package.json": [
			"sort-package-json",
			"git add"
		]
	}
}
